<script>
function unlock() {
  if (document.getElementById("password").value === "01032025") {
    document.getElementById("login").style.display = "none";
    document.getElementById("content").style.display = "block";
    document.getElementById("music").play();
  } else {
    document.getElementById("error").innerText = "Wrong password üíî";
  }
}

const loveDate = new Date("2025-03-01");
setInterval(() => {
  const days = Math.floor((new Date() - loveDate) / (1000*60*60*24));
  document.getElementById("countdown").innerText =
    `We have been in love for ${days} days üíû`;
}, 1000);
</script>

